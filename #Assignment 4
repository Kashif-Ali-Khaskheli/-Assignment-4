#Question2

def factorial(n):
    result = 1
    for i in range(1, n + 1):
        result *= i
    return result

number = int(input("enter a number:"))
result = factorial(number)
print(f"The factorial of {number} is: {result}")

#Question4

num_people = int(input("Enter number of people: "))
cost_per_meal = float(input("Enter cost per meal: "))
sales_tax_percentage = float(input("Enter sales tax percentage:"))
tip_percentage = float(input("Enter tip percentage: "))


total_cost_of_food = num_people * cost_per_meal
total_sales_tax = total_cost_of_food * (sales_tax_percentage / 100)
total_tip_amount = total_cost_of_food * (tip_percentage / 100)
total_tip_per_person = total_tip_amount / num_people

print("Total cost of food: ", total_cost_of_food)
print("Total sales tax: ", total_sales_tax)
print("Total tip amount: ", total_tip_amount)
print("Total tip per person: ", total_tip_per_person)
